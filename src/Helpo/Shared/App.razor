<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView Resource="@routeData" RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <MudAlert Severity="Severity.Info" Variant="Variant.Filled">Sorry, you have to be logged in to access this page.</MudAlert>
                    
                    <div class="d-flex">
                        <MudButton class="ml-auto mt-2" 
                                Variant="Variant.Filled" 
                                Color="Color.Primary" 
                                Link="/auth/login" 
                                EndIcon="@Icons.Filled.Login">
                            Login now!
                        </MudButton>
                    </div>
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <MudAlert Severity="Severity.Info" Variant="Variant.Filled">Sorry, there's nothing at this address.</MudAlert>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>